<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/achieve_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="绿色网络关键技术研究"
            android:textColor="#1F1F1F"
            android:textSize="26dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/achieve_detail_project"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="项目:李明"/>
            <TextView
                android:id="@+id/achieve_detail_status"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="状态:进行中"/>
            <TextView
                android:id="@+id/achieve_detail_time"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.3.31"/>
        </LinearLayout>
        <View  android:layout_height="20px"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="#EBEBEB"
            />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="10dp"
                android:textColor="#1C1C1C"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="成果作者"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/achieve_detail_member1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/achieve_detail_member2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/achieve_detail_member3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/achieve_detail_member4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/achieve_detail_member5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/achieve_detail_member6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/achieve_detail_member7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/achieve_detail_member8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>
        <View  android:layout_height="20px"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="#EBEBEB"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#1C1C1C"
            android:text="成果详细"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/achieve_detail_position1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="期刊名称"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/achieve_detail_position2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="投递日期"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/achieve_detail_position3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="过审日期"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/achieve_detail_position4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="发表日期"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/achieve_detail_position5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="索引号"
            android:textSize="16dp" />

        <View  android:layout_height="20px"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="#EBEBEB"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#1C1C1C"
            android:text="成果摘要"
            />
        <TextView
            android:id="@+id/achieve_detail_abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="1.基于能效的单小区网络-用户联合资源分配"
            android:textSize="16dp" />

        <View  android:layout_height="20px"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="#EBEBEB"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#1C1C1C"
            android:text="成果文件"
            />
        <TextView
            android:id="@+id/achieve_detail_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="1.基于能效的单小区网络-用户联合资源分配"
            android:textSize="16dp" />
        <View  android:layout_height="20px"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="#EBEBEB"
            />
    </LinearLayout>
</ScrollView>